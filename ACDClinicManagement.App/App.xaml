        <!--  ScrollViewer  -->
        <Style x:Key="ScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Margin" Value="2" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="Background" Value="AliceBlue" />
        </Style>
        <!--  WrapPanel  -->
        <Style x:Key="WrapPanelStyle" TargetType="WrapPanel">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <!--  Image  -->
        <Style TargetType="Image">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="100" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="FlowDirection" Value="LeftToRight" />
        </Style>
        <Style x:Key="TabItemImageStyle" TargetType="{x:Type Image}">
            <Setter Property="Margin" Value="2" />
            <Setter Property="MinHeight" Value="35" />
            <Setter Property="MaxHeight" Value="35" />
            <Setter Property="MinWidth" Value="35" />
            <Setter Property="MaxWidth" Value="35" />
            <Setter Property="FlowDirection" Value="LeftToRight" />
        </Style>
        <Style x:Key="GridImageStyle" TargetType="{x:Type Image}">
            <Setter Property="Margin" Value="2" />
            <Setter Property="MinHeight" Value="50" />
            <Setter Property="MaxHeight" Value="50" />
            <Setter Property="MinWidth" Value="50" />
            <Setter Property="MaxWidth" Value="50" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FlowDirection" Value="LeftToRight" />
        </Style>
        <Style x:Key="ImageInButtonStyle" TargetType="Image">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="FlowDirection" Value="LeftToRight" />
        </Style>
        <Style x:Key="ImageLittleInButtonStyle" TargetType="Image">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="FlowDirection" Value="LeftToRight" />
        </Style>
        <!--  GroupBox  -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="#42C0FB" />
        </Style>
        <!--  WindowsFormsHost  -->
        <Style TargetType="WindowsFormsHost">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2" />
        </Style>
        <!--  DataGrid  -->
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="AlternatingRowBackground" Value="#a2defa" />
            <Setter Property="SelectionMode" Value="Single" />
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#0245A3" />
            <Setter Property="Foreground" Value="WHite" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="5,0" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Black" />
        </Style>
        <Style TargetType="DataGridCell">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#43942b" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--  CheckBox  -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="FlowDirection" Value="RightToLeft" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <!--  RadioButton  -->
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <!--  ShortUpDown  -->
        <Style TargetType="xctk:ShortUpDown">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2" />
        </Style>
        <!--  TabControl  -->
        <Style x:Key="TabControlStyle" TargetType="TabControl">
            <Setter Property="Margin" Value="1" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Background" Value="AliceBlue" />
        </Style>
        <Style x:Key="TabControlGeneral" TargetType="TabControl">
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderBrush" Value="#0245A3" />
        </Style>
        <!--  TabItem  -->
        <Style x:Key="TabItemStyle" TargetType="{x:Type TabItem}">
            <Setter Property="MinWidth" Value="185" />
            <Setter Property="MinHeight" Value="45" />
        </Style>
        <!--  StatusBar  -->
        <Style x:Key="StatusBarStyle" TargetType="StatusBar">
            <Setter Property="Margin" Value="2" />
        </Style>
        <!--  Expander  -->
        <Style x:Key="ExpanderStyle" TargetType="Expander">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="#42C0FB" />
        </Style>
