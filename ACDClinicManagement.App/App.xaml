            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="#2EB872" />
            <Setter Property="BorderBrush" Value="#42C0FB" />
        </Style>
        <!--  Grid  -->
        <Style x:Key="WindowBodyGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="5" />
            <Setter Property="FlowDirection" Value="RightToLeft" />
        </Style>
        <Style x:Key="TabItemGridStyle" TargetType="Grid">
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style x:Key="GridStyle1" TargetType="Grid">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Width" Value="270" />
            <Setter Property="Height" Value="190" />
